<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/bennu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/bennu" />

    <ImageView
        android:id="@+id/level1"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:src="@drawable/level1" />

    <ImageView
        android:id="@+id/flech1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:layout_toEndOf="@+id/level1"
        android:src="@drawable/fleche_1_2"
        android:layout_toRightOf="@+id/level1" />

    <ImageView
        android:id="@+id/level2"
        android:layout_width="70dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:layout_toEndOf="@+id/flech1"
        android:src="@drawable/level2trans"
        android:layout_toRightOf="@+id/flech1" />

    <ImageView
        android:id="@+id/flech2"
        android:layout_width="20dp"
        android:layout_height="230dp"
        android:layout_above="@+id/level2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:src="@drawable/fleche2_3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp" />

    <ImageView
        android:id="@+id/level3"
        android:layout_width="67dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/level2"
        android:layout_marginTop="133dp"
        android:src="@drawable/level3trans"
        android:layout_alignLeft="@+id/level2" />

    <ImageView
        android:id="@+id/flech3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/level1"
        android:src="@drawable/fleche3_4"
        android:layout_toRightOf="@+id/level1" />

    <ImageView
        android:id="@+id/level4"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_above="@+id/level3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-133dp"
        android:src="@drawable/level4trans" />

    <ImageView
        android:id="@+id/flech4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/flech3"
        android:layout_toStartOf="@+id/level1"
        android:src="@drawable/flecje4_5"
        android:layout_toLeftOf="@+id/level1" />

    <ImageView
        android:id="@+id/level5"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:layout_alignBottom="@+id/level3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:src="@drawable/level5trans"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp" />

    <ImageView
        android:id="@+id/flech5"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="215dp"
        android:src="@drawable/fleche5_6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp" />

    <ImageView
        android:id="@+id/level6"
        android:layout_width="69dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/level5"
        android:layout_alignTop="@+id/level2"
        android:src="@drawable/level6trans"
        android:layout_alignLeft="@+id/level5" />

    <ImageView
        android:id="@+id/minilogo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/minilogo" />

</RelativeLayout>